{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/styles/*": ["src/styles/*"],
            "@/layouts/*": ["src/layouts/*"],
            "@/images/*": ["src/images/*"],
        },
        "module": "commonjs",
        "target": "es6",
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2015",
            "es2017"
        ],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false
    },
    "include": [
        "./src/**/*",
        "src/pages/404.tsx"
    ]
}